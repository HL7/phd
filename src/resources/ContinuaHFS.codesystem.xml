  <url value="http://hl7.org/fhir/uv/phd/CodeSystem/ContinuaHFS" />

  <version value="0.2.0"/> 

  <name value="ContinuaHFS"/> 
  <status value="draft"/> 
  <experimental value="true"/> 
  <date value="2018-09-18"/> 
  <publisher value="Health Level Seven International (Health Care Devices Work Group)"/> 

  <description value="Codes used to describe the Continua Health and Fitness interfaces supported by a Personal Health Gateway. More codes maybe added to this list in the future."/> 
  
  <!-- The codes are strings but consist of only digits, they do not represent integers -->
  <caseSensitive value="true"/> 
  <content value="complete"/> 
  
 
  <concept> 
    <code value="0"/> 
    <display value="observation-upload-soap"/> 
    <definition value="Indicates the PHG has been Continua certified for the PCD-01 upload using Web services"/> 
  </concept> 
  <concept> 
    <code value="1"/> 
    <display value="consent-enabled-soap"/> 
    <definition value="Indicates the PHG has been Continua certified for the PCD-01 upload using Web services with patient consent"/> 
  </concept>
  <concept> 
    <code value="2"/> 
    <display value="capabilities"/> 
    <definition value="Indicates the PHG has been Continua certified for Capabilities Exchange"/> 
  </concept>
  <concept> 
    <code value="3"/> 
    <display value="observation-upload-hdata"/> 
    <definition value="Indicates the PHG has been Continua certified for PCD-01 upload using HDATA"/> 
  </concept>
  <concept> 
    <code value="4"/> 
    <display value="consent-enabled-hdata"/> 
    <definition value="Indicates the PHG has been Continua certfied for PCD-01 upload using HDATA with patient consent"/> 
  </concept>
  <concept> 
    <code value="5"/> 
    <display value="questionnaire"/> 
    <definition value="Indicates the PHG has been Continua certfied for the CDA questionnaire"/> 
  </concept>
  <concept> 
    <code value="6"/> 
    <display value="aps"/> 
    <definition value="Indicates the PHG has been Continua certfied for Authenticated Persistent Sessions"/> 
  </concept>
  <concept> 
    <code value="7"/> 
    <display value="observation-upload-fhir"/> 
    <definition value="Indicates the PHG has been Continua certfied for uploading FHIR resources"/> 
  </concept>
</CodeSystem> 